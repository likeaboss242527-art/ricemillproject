{
  "name": "ricemill-react-electron",
  "version": "1.0.0",
  "description": "RiceMill desktop app - React + Electron + SQLite",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "start": "electron .",
    "build": "vite build",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder --win",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.ricemill.app",
    "productName": "RiceMill",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    },
	"publish": null
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^8.1.0",
    "bcryptjs": "^2.4.3",
    "csv-writer": "^1.6.0",
    "csv-parse": "^5.0.0",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.1",
    "bwip-js": "^2.0.9",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1",
    "@vitejs/plugin-react": "^4.0.0"
  }
}